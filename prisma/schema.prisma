generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  codeVerification             String?
  codeCreatedAt                DateTime?
  updatePasswordToken          String?
  updatePasswordTokenCreatedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  movies Movie[]

  @@map("users")
}

model Movie {
  id          String @id @default(uuid())
  title       String
  description String
  coverUrl    String
  videoUrl    String
  popularity  Int
  votes       Int
  rating      Int
  budget      Int
  revenue     Int

  releaseAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  genres    Genre[]    @relation("movie_genres")
  languages Language[] @relation("movie_languages")

  @@map("movies")
}

model Genre {
  id   String @id @default(uuid())
  name String @unique

  movies Movie[] @relation("movie_genres")

  @@map("genres")
}

model Language {
  id   String @id @default(uuid())
  name String @unique

  movies Movie[] @relation("movie_languages")

  @@map("languages")
}
